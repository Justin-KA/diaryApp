<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your diary entries:</p>

{{#if diaries}}
    <table class="striped">
        <thread>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            {{#each diaries}}
            <tr>
                <td><a href="/diaries/{{_id}}"></a>{{title}}</td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any diary entries</p>
{{/if}}